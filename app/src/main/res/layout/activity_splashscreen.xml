<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_gravity="center"
    android:id="@+id/lin_lay"
    android:gravity="center"
    >

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/splash"
        android:background="@drawable/logo_center"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/splash2"
        android:background="@drawable/logo_rignt"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/splash3"
        android:background="@drawable/logo_left"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:id="@+id/splash4"
        android:background="@drawable/logo_title"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"/>

</FrameLayout>

